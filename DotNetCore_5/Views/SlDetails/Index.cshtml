@model IEnumerable<DotNetCore_5.Models.SlDetails>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 style="font-family:Algerian;text-align:center;color:forestgreen">Result Information</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-bordered table-sm">
    <thead>
        <tr class="bg-secondary">
            <th>
                @Html.DisplayNameFor(model => model.ApplicationFrom.ApplicantName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Selection.Position)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Class.ClassId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.School.SchoolName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Branch.BranchName)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ApplicationFrom.ApplicantName)
            </td>
